<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo de la forma (en este caso, un rectÃ¡ngulo) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00FFFFFF" /> <!-- Color de fondo -->
        </shape>
    </item>
    <!-- Borde en la parte inferior -->
    <item android:left="-12dp" android:right="-12dp" android:top="-12dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <stroke
                android:gravity="bottom"
                android:color="@color/gris"
                android:dashWidth="10dp"
                android:dashGap="4dp"
                android:width="1dp"/>
            <padding android:top="8dp" android:bottom="0dp" /> <!-- Ajusta el espacio en la parte superior para el borde -->
        </shape>
    </item>
</layer-list>
