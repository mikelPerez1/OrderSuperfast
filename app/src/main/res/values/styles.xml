<resources>

    <style name="Widget.Theme.Login.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="Widget.Theme.Login.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="MyCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:background">@drawable/card_rounded_left_only</item>
    </style>

    <style name="ProgressBarCustom" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_bar</item>
    </style>

    <style name="switchStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:thumbTint">@color/blue2</item> <!-- Cambia este color al que desees -->
        <item name="android:trackTint">@color/black</item>
        <item name="colorSwitchThumbNormal">@color/black</item>
        <item name="colorControlActivated">@color/blue2</item>

    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/blue2</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/gris
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/black
        </item>
        <item name="colorControlNormal">@color/black</item>
    </style>

    <style name="CustomCheckBoxStyle" parent="Theme.AppCompat.Light">

        <item name="android:colorControlActivated">@color/colorChecked</item>
        <item name="colorControlNormal">@color/colorUnchecked</item>

    </style>


    <style name="SwitchProductos" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/verdeOrderSuperfast</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/black
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/black
        </item>
        <item name="colorControlNormal">@color/black</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Dialog.Alert">



        <!-- No backgrounds, titles or window float -->

    </style>





</resources>