<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/anchuraCategoriaVertical"
        android:layout_height="@dimen/alturaCategoriaVertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/barraSeleccion"

            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_marginTop="3dp"
            android:background="@color/verdeOrderSuperfast"
            app:layout_constraintEnd_toEndOf="@+id/tvNombreCategoria"
            app:layout_constraintStart_toStartOf="@+id/tvNombreCategoria"
            app:layout_constraintTop_toBottomOf="@+id/tvNombreCategoria">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/barraTop"
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:background="@color/grisClaroNI"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tvNombreCategoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:maxWidth="@dimen/anchuraMaxTxtCat"
            android:text="Categoria"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_semi_big_takeAway"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/barraBot"
            app:layout_constraintStart_toEndOf="@+id/barraTop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="1" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/barraBot"

            android:layout_width="2dp"
            android:layout_height="0dp"
            android:layout_marginEnd="10dp"
            android:background="@color/grisClaroNI"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>